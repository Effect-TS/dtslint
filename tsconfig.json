{
  "compilerOptions": {
    "noEmitOnError": false,
    "esModuleInterop": true,
    "outDir": "dist",
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6"],
    "sourceMap": false,
    "declaration": false,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "skipLibCheck": true
  },
  "include": ["./src"]
}
